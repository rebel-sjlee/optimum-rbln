{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "dependencyDashboard": true,
    "prHourlyLimit": 0,
    "baseBranches": [
        "dev"
    ],
    "extends": [
        ":semanticCommitsDisabled"
    ],
    "commitMessagePrefix": "[pytest-full] [slack-report] dependency:",
    "prTitle": "dependency: {{#if groupName}}{{groupName}}{{else}}{{depName}}{{/if}}{{#if newVersion}} to {{newVersion}}{{/if}}",
    "repositories": [
        "rbln-sw/optimum-rbln"
    ],
    "lockFileMaintenance": {
        "enabled": false
    },
    "packageRules": [
        {
            "matchPackageNames": [
                "*"
            ],
            "enabled": false
        },
        {
            "matchDatasources": [
                "pypi"
            ],
            "matchPackageNames": [
                "diffusers"
            ],
            "enabled": true,
            "vulnerabilityFixStrategy": "latest",
            "groupName": "huggingface-diffusers"
        },
        {
            "matchDatasources": [
                "pypi"
            ],
            "matchPackageNames": [
                "transformers"
            ],
            "vulnerabilityFixStrategy": "latest",
            "enabled": true,
            "groupName": "huggingface-transformers"
        }
    ]
}